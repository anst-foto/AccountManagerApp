<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

             x:Class="AccountManagerApp.Desktop.Components.InputComponent"
             x:Name="Component">
    <UserControl.Styles>
        <Style Selector="Label">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style Selector="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </UserControl.Styles>

    <Grid ColumnDefinitions="*, 3*"
          DataContext="{Binding ElementName=Component}">
        <Label Content="{Binding Path=Label, Mode=OneWay}"
               Target="{Binding ElementName=Input}"
               Grid.Column="0"/>
        <TextBox x:Name="Input"
                 Text="{Binding Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Grid.Column="1"/>
    </Grid>
</UserControl>

